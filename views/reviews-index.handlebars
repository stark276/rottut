<!-- views/reviews-index.handlebars -->

<h1>Reviews</h1>


<div class="row">
  {{#each reviews}}
    <div class="col-md-3">
      <h2><a href="/reviews/{{this._id}}">{{this.title}}</a></h2>
      <p class="text-muted">Created on: {{this.createdAtFormatted}}</p>
      <small>{{this.movieTitle}}</small>
      <div><small>Created by: </small>{{this.author.username}}</div>
    </div>
  {{/each}}
  {{#each comments}}
    {{> comment.author.username }}
  {{/each}}

</div>